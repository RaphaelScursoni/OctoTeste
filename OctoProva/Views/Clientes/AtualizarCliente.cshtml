@model OctoProva.Models.Cliente

@{
    ViewData["Title"] = "AtualizarCliente";
}

<h2>Atualizar Cliente</h2>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AtualizarCliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoCliente" class="control-label"></label>
                <input asp-for="TipoCliente" class="form-control" />
                <span asp-validation-for="TipoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Documento" class="control-label"></label>
                <input asp-for="Documento" class="form-control" />
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneCelular" class="control-label"></label>
                <input asp-for="TelefoneCelular" class="form-control" />
                <span asp-validation-for="TelefoneCelular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneComercial" class="control-label"></label>
                <input asp-for="TelefoneComercial" class="form-control" />
                <span asp-validation-for="TelefoneComercial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneResidencial" class="control-label"></label>
                <input asp-for="TelefoneResidencial" class="form-control" />
                <span asp-validation-for="TelefoneResidencial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoEndereco1" class="control-label"></label>
                 <select asp-for="TipoEndereco1" class="form-control">
                      <option>Selecione</option>
                    <option value="Residencial">Residencial</option>
                    <option value="Comercial">Comercial</option>
                    <option value="Cobrança">Cobrança</option>
                    <option value="Correspondência">Correspondencia</option>
                    <option value="Entrega">Entrega</option>
                </select>
                <span asp-validation-for="TipoEndereco1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco1" class="control-label"></label>
                <input asp-for="Endereco1" class="form-control" />
                <span asp-validation-for="Endereco1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoEndereco2" class="control-label"></label>
                 <select asp-for="TipoEndereco2" class="form-control">
                      <option>Selecione</option>
                    <option value="Residencial">Residencial</option>
                    <option value="Comercial">Comercial</option>
                    <option value="Cobrança">Cobrança</option>
                    <option value="Correspondência">Correspondencia</option>
                    <option value="Entrega">Entrega</option>
                </select>
                <span asp-validation-for="TipoEndereco2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco2" class="control-label"></label>
                <input asp-for="Endereco2" class="form-control" />
                <span asp-validation-for="Endereco2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
